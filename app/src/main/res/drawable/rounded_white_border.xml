<!-- res/drawable/rounded_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền của layout -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/white"/> <!-- Đảm bảo không có border -->
        </shape>
    </item>
</layer-list>
