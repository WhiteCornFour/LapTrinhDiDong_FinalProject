<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    tools:context=".View.Fragment_Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:text="Thirst Quencher"
            android:textColor="@color/dark_brown"
            android:textSize="24sp"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/beige"
            android:layout_marginBottom="24dp"
            android:padding="8dp">

            <Button
                android:id="@+id/btnSearchHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/search_strong_icon"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:backgroundTint="@color/beige"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""/>

            <EditText
                android:id="@+id/edtSearchHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:textSize="10pt"
                android:textColorHint="@color/dark_brown"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:hint="What shall we deliver?"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="@color/dark_brown"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lobster"
            android:text="Order now!"/>

        <ListView
            android:id="@+id/lvProductHomeCus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/dark_brown"
            android:dividerHeight="1dp"
            android:paddingTop="8dp"/>
    </LinearLayout>

</FrameLayout>
