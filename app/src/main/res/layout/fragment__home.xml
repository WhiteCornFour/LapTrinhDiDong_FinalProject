<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    tools:context=".View.Fragment_Home">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Boba The Bar"
        android:textStyle="bold"
        android:background="@drawable/rounded_darkbrown_radius_rectangle"
        android:textColor="@color/light_beige"
        android:textSize="13pt"
        android:padding="8dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_white_border_shadow"
        android:padding="8dp">

        <EditText
            android:id="@+id/edtSearchHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:textSize="10pt"
            android:fontFamily="@font/alata"
            android:textColorHint="@color/dark_brown"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            android:textStyle="italic"
            android:hint="What shall we deliver?"/>


        <Button
            android:id="@+id/btnSearchHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/search_strong_icon"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_haflradius_border_shadow"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/alata"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="Our variety of choices for youu!"
            android:textColor="@color/dark_brown"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/dark_brown"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="24dp" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/alata"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="Trying out best products!"
            android:textColor="@color/dark_brown"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/lvProductHomeCus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="2dp"
            android:divider="@color/dark_brown"
            android:paddingTop="8dp" />
    </LinearLayout>

</FrameLayout>
