<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue"
    tools:context=".View.Activity_Updating_ProductCategories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_below_corner"
            android:fontFamily="@font/cardo"
            android:gravity="center"
            android:text="Updating Categories"
            android:textColor="@color/ivory"
            android:textSize="12pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/rounded_top_corners"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cardo"
                android:text="Category ID: "
                android:textColor="@color/dark_blue"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/edt_category_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/cardo"
                android:inputType="textPersonName"
                android:textColor="@color/dark_blue" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/rounded_top_corners"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cardo"
                android:text="Category Name: "
                android:textColor="@color/dark_blue"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/edt_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/cardo"
                android:inputType="textPersonName"
                android:textColor="@color/dark_blue" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/rounded_top_corners"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView43"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cardo"
                android:text="Description: "
                android:textColor="@color/dark_blue"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/edt_category_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/cardo"
                android:inputType="textPersonName"
                android:textColor="@color/dark_blue" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/cardo"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="CHOOSE IMAGE"
            android:textColor="@color/dark_blue" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_category"
            android:layout_margin="5dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btn_save_category"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:text="EDIT"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="8dp"/>

        <ListView
            android:id="@+id/lv_product_types"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_top_corners"
            android:dividerHeight="10.0sp" />

    </LinearLayout>


</ScrollView>

