<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_beige">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"

            app:srcCompat="@drawable/roof" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/beverage_cafe_coffee_cold_drink_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/alata"
            android:text="Since 2024" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_qmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/alata"
        android:text="BOBA THE BAR"
        android:textColor="@color/dark_brown"
        android:textSize="18pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_haflradius_border_shadow"
        android:orientation="vertical">

        <TextView
        android:id="@+id/tv_qmk_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Forgot password?"
        android:textColor="@color/dark_black"
        android:textSize="14pt"
        android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_username_customer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/alata"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/dark_black"
                android:hint="Enter your phone number"
                android:inputType="phone"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBackPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="Your password: "
            android:fontFamily="@font/alata"
            android:textColor="@color/dark_brown"
            android:textSize="10pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_send_qmk_customer"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:backgroundTint="@color/dark_brown"
            android:text="SEND" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_already_sign_in_qmk_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember your pass?"
                android:fontFamily="@font/alata"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sign_in_qmk_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sign In"
                android:fontFamily="@font/alata"
                android:textColor="@color/dark_brown"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

