<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_title_qmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="APP FOR SELLING DRINKS"
        android:textColor="@color/dark_brown"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_qmk_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Forgot Password"
        android:textColor="@color/dark_brown"
        android:textSize="20sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Phone Number"
        android:textColor="@color/dark_brown"
        android:textSize="10pt"
         />

    <EditText
        android:id="@+id/edt_username_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint=""
        android:fontFamily="@font/arsenal"
        android:backgroundTint="@color/dark_brown"
        android:textColorHint="@color/dark_brown"
        android:textColor="@color/dark_brown"/>

    <TextView
        android:id="@+id/tvBackPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:enabled="false"
        android:textSize="10pt"
        android:textColor="@color/dark_brown"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Your password..." />

    <Button
        android:id="@+id/btn_send_qmk_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SEND"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/beige" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_already_sign_in_qmk_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Sign in ?"
            android:textColor="@color/brown"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_sign_in_qmk_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sign In"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

