<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity_Detail_Profile_Cus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBackPro"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_back_button" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13pt"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textColor="@color/dark_brown"
            android:text="Updating Your Profile" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgCusPro"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="6dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/backgr1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNamePro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/alata"
                android:drawableStart="@drawable/custom_person_icon"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:ems="10"
                android:textColor="@color/dark_black"
                android:inputType="textPersonName"
                android:hint="Your name"
                tools:ignore="SpeakableTextPresentCheck">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtEmailPro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/alata"
                android:drawableStart="@drawable/custom_email_icon"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/dark_black"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtPhoneNumberPro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/alata"
                android:drawableStart="@drawable/custom_phone_icon"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/dark_black"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="number"
                android:enabled="false"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtPassPro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/alata"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/dark_black"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRegisPro"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:backgroundTint="@color/dark_brown"
            android:text="Update" />
    </LinearLayout>

</ScrollView>