<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_below_corner"
            android:fontFamily="@font/cardo"
            android:gravity="center"
            android:text="Categories Management"
            android:textColor="@color/almond"
            android:textSize="12pt"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:backgroundTint="@color/almond"
            android:background="@drawable/rounded_top_corners"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/cardo"
                    android:gravity="left|center"
                    android:paddingLeft="16dp"
                    android:text="Add"
                    android:layout_marginRight="5dp"
                    android:textSize="10pt" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ic_add_category" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUpdateCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/cardo"
                    android:gravity="left|center"
                    android:paddingLeft="16dp"
                    android:text="Update"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:textSize="10pt" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_update_category" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDeleteCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/cardo"
                    android:gravity="left|center"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:text="Delete"
                    android:layout_marginRight="5dp"
                    android:textSize="10pt" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_remove_category" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cardo"
            android:gravity="center"
            android:background="@drawable/rounded_color_top_almond"
            android:text="List of Categories"
            android:textColor="@color/navy"
            android:textSize="10pt"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/lvCategories"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:dividerHeight="10.0sp"
            android:background="@color/white"
            android:backgroundTint="@color/almond" />

    </LinearLayout>

</LinearLayout>
