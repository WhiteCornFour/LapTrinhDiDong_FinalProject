<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity_Adding_Products">

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/pink"
        android:textSize="8pt"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Adding Products" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="320dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAddingProducts"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bobaimg" />

            <Button
                android:id="@+id/btnAddingProductsImg"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:layout_marginTop="4pt"
                android:backgroundTint="@color/pink"
                android:text="Add New IMG" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:text="ID Product" />

            <EditText
                android:id="@+id/edtAddingIDProducts"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:text="ID Category" />

            <Spinner
                android:id="@+id/spinnerCategoryID"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:text="Name Product" />

            <EditText
                android:id="@+id/edtAddingNameProducts"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:textSize="7pt"
                android:layout_marginBottom="2pt"
                android:text="Price" />

            <EditText
                android:id="@+id/edtAddingPriceProducts"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:ems="10"
                android:textColor="@color/black"
                android:inputType="textPersonName"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        android:textSize="7pt"
        android:layout_marginBottom="2pt"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="Description" />

    <EditText
        android:id="@+id/edtAddingDescriptionProducts"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:ems="10"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:inputType="textMultiLine"
    android:lineSpacingMultiplier="1.2"
    android:layout_marginBottom="5dp"/>


    <Button
        android:id="@+id/btnAddingProducts"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="5pt"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/pink"
        android:text="Adding Products" />

    <ListView
        android:id="@+id/lvProductForAdding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>