<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context=".View.Activity_Detail_Products_Customer">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="13pt"
        android:textColor="@color/light_beige"
        android:textStyle="bold"
        android:background="@drawable/rounded_darkbrown_radius_rectangle"
        android:fontFamily="@font/alata"
        android:text="THE BAR DRINKS" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackGroundDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundSquare"
        app:srcCompat="@drawable/hinh_anh_dang_nhap"
        app:strokeColor="@color/dark_brown"
        app:strokeWidth="3pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/rounded_top_corners"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Boba"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:paddingRight="2dp"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="3dp"
            android:fontFamily="@font/alata"
            android:text="Trà vị sữa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/rounded_top_corners"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Size:" />

        <RadioGroup
            android:id="@+id/rGSize"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/black"
                    android:paddingLeft="3dp"
                    android:textSize="6pt"
                    android:gravity="left|center"
                    android:text="Size S" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="0dp"
                    android:fontFamily="@font/alata"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:textSize="5pt"
                    android:text="0$" />

                <RadioButton
                    android:id="@+id/rdbSizeS"
                    android:layout_marginLeft="10dp"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:textSize="6pt" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/alata"
                    android:layout_weight="4"
                    android:textColor="@color/black"
                    android:paddingLeft="3dp"
                    android:textSize="6pt"
                    android:gravity="left|center"
                    android:text="Size M" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:fontFamily="@font/alata"
                    android:textSize="5pt"
                    android:text="3$" />

                <RadioButton
                    android:id="@+id/rdbSizeM"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/alata"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:textSize="6pt" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="0dp"
                    android:fontFamily="@font/alata"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:textColor="@color/black"
                    android:paddingLeft="3dp"
                    android:textSize="6pt"
                    android:gravity="left|center"
                    android:text="Size L" />

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="0dp"
                    android:fontFamily="@font/alata"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:textSize="5pt"
                    android:text="5$" />

                <RadioButton
                    android:id="@+id/rdbSizeL"
                    android:layout_marginLeft="10dp"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:textSize="6pt" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/rounded_top_corners">

        <TextView
            android:id="@+id/tvTotalOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:paddingLeft="3dp"
            android:layout_gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="$"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingRight="7dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinusQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/dark_brown"
                android:textColor="@color/light_beige"
                android:text="-"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:enabled="false"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/alata"
                android:text="1" />

            <Button
                android:id="@+id/btnPlusQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/dark_brown"
                android:textColor="@color/light_beige"
                android:text="+"
                android:textSize="5pt" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddingIntoCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_brown"
        android:textColor="@color/light_beige"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="Put in my basket" />

    <Button
        android:id="@+id/btnCancelAddingCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_beige"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="Cancel" />
</LinearLayout>