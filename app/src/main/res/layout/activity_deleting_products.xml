<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_blue"
    tools:context=".View.Activity_Deleting_Products">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_below_corner"
        android:fontFamily="@font/cardo"
        android:gravity="center"
        android:text="Products List"
        android:layout_marginBottom="10dp"
        android:textColor="@color/ivory"
        android:textSize="12pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtSearchDeleteBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_bar_bg"
            android:backgroundTint="@color/almond"
            android:ems="10"
            android:layout_weight="2"
            android:fontFamily="@font/cardo"
            android:hint="Seach products by code...."
            android:inputType="textPersonName"
            android:paddingLeft="7dp"
            android:textColor="@color/dark_blue"
            android:textSize="7pt"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSearchForDeleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/dark_blue"
            android:drawableTop="@drawable/sharp_search_24"
            android:fontFamily="@font/cardo"
            android:gravity="center"
            android:textColor="@color/almond"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:backgroundTint="@color/almond"
        android:background="@drawable/rounded_top_corners"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCheckAllProducts"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/cardo"
                android:gravity="left|center"
                android:paddingLeft="16dp"
                android:text="Check All Products"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textSize="8pt" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/check_r_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClearAllProducts"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/cardo"
                android:gravity="left|center"
                android:paddingLeft="16dp"
                android:text="Clear All Products"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textSize="8pt" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/close_r_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDeleteProducts"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/cardo"
                android:gravity="left|center"
                android:paddingLeft="16dp"
                android:text="Delete Choosing Products"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/delete_icon" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/rounded_color_top_almond"
        android:fontFamily="@font/cardo"
        android:gravity="center"
        android:text="List of Drinkings"
        android:textColor="@color/navy"
        android:textSize="10pt"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/almond"
        android:dividerHeight="10.0sp"></ListView>

    <FrameLayout
        android:id="@+id/frameLayoutDeleteDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>


</LinearLayout>
