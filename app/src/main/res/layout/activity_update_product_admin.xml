<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Activity_Updating_Products">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="13pt"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"
        android:layout_marginBottom="15dp"
        android:text="Update Product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textColor="@color/brown"
            android:text="Product ID: " />

        <EditText
            android:id="@+id/edtProductID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="9pt"
            android:textColor="@color/brown"
            android:enabled="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textColor="@color/brown"
            android:text="Category ID: " />

        <EditText
            android:id="@+id/edtCategoryID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:enabled="false"
            android:textSize="9pt"
            android:textColor="@color/brown"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textColor="@color/brown"
            android:text="Product Name: " />

        <EditText
            android:id="@+id/edtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="9pt"
            android:textColor="@color/brown"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Product Description: "
            android:textColor="@color/brown"
            android:textSize="9pt" />

        <EditText
            android:id="@+id/edtProductDescription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/brown"
            android:textSize="9pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Initial Price: "
            android:textColor="@color/brown"
            android:textSize="9pt" />

        <EditText
            android:id="@+id/edtInitialPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="9pt"
            android:textColor="@color/brown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgUpdateProduct"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/avtadmin" />

        <Button
            android:id="@+id/btnImportImageUpdateProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_upload"
            android:drawableTint="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/beige"
            android:text="Import Image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Search products by code: "
            android:textColor="@color/brown"
            android:textSize="9pt" />

        <EditText
            android:id="@+id/edtSearchForUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="9pt"
            android:textColor="@color/brown"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnSearchForUpate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/beige"
        android:text="Search" />

    <Button
        android:id="@+id/btnUpdateProductAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/beige"
        android:layout_marginBottom="10dp"
        android:text="Update Prodcuct" />

    <ListView
        android:id="@+id/lvProductForUpdate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/beige"
        />
</LinearLayout>