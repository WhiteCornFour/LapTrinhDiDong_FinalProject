<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"
        android:layout_marginLeft="15dp"
        android:text="Product management function" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInsertProduct"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/insert"
            android:textColor="@color/dark_brown"
            android:layout_marginBottom="10dp"
            android:textSize="7pt"
            android:text="Insert" />

        <Button
            android:id="@+id/btnUpdateProduct"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/update"
            android:textColor="@color/dark_brown"
            android:layout_marginBottom="10dp"
            android:textSize="7pt"
            android:text="Update" />

        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/delete"
            android:text="Delete"
            android:textSize="7pt"
            android:textColor="@color/dark_brown" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"
        android:text="List of products" />

    <ListView
        android:id="@+id/lvProductManagement"
        android:background="@color/light_beige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>