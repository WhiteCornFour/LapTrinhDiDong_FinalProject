<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue"
    tools:context=".View.Activity_Deleting_ProductCategories">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_below_corner"
        android:fontFamily="@font/cardo"
        android:gravity="center"
        android:text="Product Categories List"
        android:layout_marginBottom="10dp"
        android:textColor="@color/ivory"
        android:textSize="12pt"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtSearchDeleteCategoriesBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/search_bar_bg"
            android:backgroundTint="@color/almond"
            android:ems="10"
            android:layout_weight="2"
            android:fontFamily="@font/cardo"
            android:hint="Seach categories by code...."
            android:inputType="textPersonName"
            android:paddingLeft="7dp"
            android:textColor="@color/dark_blue"
            android:textSize="7pt"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSearchForDeleteCategory"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/dark_blue"
            android:drawableTop="@drawable/sharp_search_24"
            android:fontFamily="@font/cardo"
            android:gravity="center"
            android:textColor="@color/almond"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/rounded_color_top_almond"
        android:fontFamily="@font/cardo"
        android:gravity="center"
        android:text="List of Categories"
        android:textColor="@color/navy"
        android:textSize="10pt"
        android:textStyle="bold" />

    <ListView
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/lvProductCate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10.0sp"
        android:background="@color/almond" />

</LinearLayout>
